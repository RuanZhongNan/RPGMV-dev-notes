{
	"compilerOptions": {
		"module": "ES2015",
		"target": "ES2015",
		"baseUrl": ".",
		"strict": true,
		"declaration": true,
		"composite": true,
		"moduleResolution": "Node",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"emitDeclarationOnly": true,
		"typeRoots": [
			"./types"
		],
		"paths": {
			"@docs/*": [
				"./docs/*"
			]
		},
	},
	"include": [
		"./docs/.vuepress/components/drill-goods/**/*.ts",
		"docs/**/*.ts",
		"docs/**/*.d.ts",
		"docs/**/*.tsx",
		"docs/**/*.vue",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		// 尝试增加指定目录下的vue组件 期望让ts识别出vue组件
		"docs/.vuepress/components/**/*.vue",
	],
}